@model DbBackupEntities.DbJobDetail
@{
    ViewBag.Title = "Delete";
}

<br />
<br />

<div class="panel panel-default">
    <div class="panel-heading"><h4>Delete Database Job</h4></div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Delete", "DbJobs", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.HiddenFor(m => m.JobId);
                    <div class="form-group">
                        @Html.LabelFor(m => m.JobTitle, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.JobTitle, new { @class = "form-control", @readonly ="readonly" })
                        </div>

                        @Html.LabelFor(m => m.FrequencyInHrs, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.FrequencyInHrs, new { @class = "form-control", @readonly ="readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastRun, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.LastRun, new { @class = "form-control", @readonly ="readonly" })
                        </div>

                        @Html.LabelFor(m => m.NextRun, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.NextRun, new { @class = "form-control", @readonly ="readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DirForBackup, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.DirForBackup, new { @class = "form-control" ,@readonly ="readonly"})
                        </div>
                        @Html.LabelFor(m => m.IsActive, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.CheckBoxFor(m => m.SaveStructure, new { @disabled = "disabled" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.BackupMethod, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.RadioButtonFor(model => model.BackupMethod, "SaveInSeparateFiles", new { @disabled = "disabled" })
                            Save In Separate Files
                            <br />
                            @Html.RadioButtonFor(model => model.BackupMethod, "SaveInOneFile", new { @disabled = "disabled" })
                            Save In One File
                        </div>

                        @Html.LabelFor(m => m.InsertMethod, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.RadioButtonFor(model => model.InsertMethod, "InsertIgnore", new { @disabled = "disabled" })
                            Insert Ignore
                            <br />
                            @Html.RadioButtonFor(model => model.InsertMethod, "ReplaceInsert", new { @disabled = "disabled" })
                            Replace Insert
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.SaveStructure, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.CheckBoxFor(m => m.SaveStructure, new { @disabled = "disabled" })
                        </div>

                        @Html.LabelFor(m => m.CompressToZip, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.CheckBoxFor(m => m.CompressToZip, new { @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DeleteOldBackups, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.CheckBoxFor(m => m.DeleteOldBackups, new { @disabled = "disabled" })
                        </div>

                        @Html.LabelFor(m => m.KeepXBackups, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.KeepXBackups, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DbUserName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.DbUserName, new { @class = "form-control", @readonly = "readonly" })
                        </div>

                        @Html.LabelFor(m => m.DbPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.PasswordFor(m => m.DbPassword, new { value=@Model.DbPassword, @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DbServerName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.DbServerName, new { @class = "form-control", @readonly = "readonly" })
                        </div>

                        @Html.LabelFor(m => m.DbName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.DbName, new { @class = "form-control", @readonly ="readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FullDbBackup, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.FullDbBackup, new { @class = "form-control", @readonly = "readonly" })
                        </div>

                        @Html.LabelFor(m => m.DbTableList, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.DbTableList, new { @class = "form-control",@readonly ="readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Delete Job" class="btn btn-danger" />
                            <a href="~/DbJobs/Index" class="btn btn-default">Cancel</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
