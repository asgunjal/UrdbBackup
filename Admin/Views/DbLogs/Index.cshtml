@model IEnumerable<DbBackupEntities.DbLog>
@{
    ViewBag.Title = "Index";
}

<br /><br />
<div class="panel panel-default">
    <div class="panel-heading"><h4>Database Job Logs</h4></div>
    <div class="panel-body">
        <table id="tblJobLogs" class="table table-hover responsive">
            <thead>
                <tr>
                    <th>
                        Job Name
                    </th>
                    <th>
                        Start Time
                    </th>
                    <th class="text-center">
                        Execution Time
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Details
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.JobName
                        </td>
                        <td>
                            @item.StartDate
                        </td>
                        <td class="text-center">
                            @(item.EndDate - item.StartDate)
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            @Html.ActionLink("More Info", "Details", new { id =@item.Id})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tblJobLogs").DataTable({
                responsive: true,
                searching: true,
                paging: true,
                ordering: false,
                info: false
            });
        });
    </script>
}
