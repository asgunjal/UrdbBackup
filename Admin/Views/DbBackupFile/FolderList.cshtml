@model IEnumerable<DbBackupEntities.Folder>
@{
    ViewBag.Title = "Index";
}

<h2></h2>

@Html.ActionLink("<< Back", "Index", null, new { @class = "btn btn-info" })
<br /><br />

<div class="panel panel-default">
    <div class="panel-heading"><h4>Backup Files List</h4></div>
    <div class="panel-body">
        <table id="tblBackupFolders" class="table table-hover responsive">
            <thead>
                <tr>
                    <th>
                        Folder Name
                    </th>
                    <th>
                        Size
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Size
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Name, name=item.DirInfo.Parent.Name })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tblBackupFolders").DataTable({
                responsive: true,
                searching: true,
                paging: true,
                ordering: false,
                info: false
            });
        });
    </script>
}
