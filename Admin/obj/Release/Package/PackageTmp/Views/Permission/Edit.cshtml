@model DbBackupEntities.Permission
@{
    ViewBag.Title = "Edit";
}

<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading"><h4>Edit Permission</h4></div>
    <div class="panel-body">
        <div class="row">
            @using (Html.BeginForm("Edit", "Permission", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.PermissionName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.PermissionName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PermissionName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PermissionDisplayName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.PermissionDisplayName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PermissionDisplayName)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="Update Permission" class="btn btn-success" />
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
