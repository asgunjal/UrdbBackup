@model IEnumerable<DbBackupEntities.Permission>
@{
    ViewBag.Title = "Manage Permission";
}

<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h4 class="panel-title pull-left"><b>Manage Permission</b></h4>
        <div>
            @Html.ActionLink("Add New Permission", "Add", null, new { @class = "btn btn-default btn-primary pull-right" })
        </div>
    </div>
    <div class="panel-body">
        <table id="tblPermission" class="table table-hover responsive">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Permission Name
                    </th>
                    <th>
                        Permission Display Name
                    </th>
                    <th>
                        &nbsp;
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.PermissionId
                        </td>
                        <td>
                            @item.PermissionName
                        </td>
                        <td>
                            @item.PermissionDisplayName
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = @item.PermissionId }) | 
                            @Html.ActionLink("Delete", "Delete", new { id = @item.PermissionId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tblPermission").DataTable({
                responsive: true,
                searching: true,
                paging: true,
                ordering: false,
                info: false
            });
        });
    </script>
}